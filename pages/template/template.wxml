<!--pages/template/template.wxml-->
<text>模板列表展示页面 点击item即可跳转预览</text>


<view class="weui-cells weui-cells_after-title" style='margin-top: 20px' bindtap='handleSelectItem'>
    <view class="weui-cell"  wx:for="{{templateList}}" wx:key="item.template_id">
      <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
          <image src="{{item.template_img_url}}" style="width: 50px; height: 50px; display: block"/>
          <!-- <view class="weui-badge" style="position: absolute;top: -.4em;right: -.4em;">8</view> -->
      </view>
      <view class="weui-cell__bd">
          <text>{{item.template_name}}</text>
          <view style="font-size: 12px;color: #888888;margin-top: 4px">
            <text>Author: {{item.template_author}}</text>
            <text style='float: right'>{{item.template_up_time}}</text>
          </view>
      </view>
  </view>
</view>


